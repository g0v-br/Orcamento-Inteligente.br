resource:overview a bgo:Overview ;
    bgo:label "Stato" ; 
    bgo:icon "fas fa-atom" ;
    bgo:title "Overview" ;
    bgo:hasPartitions [
		# a bgo:Partitins ;
		bgo:icon "fas fa-atom" ;
		bgo:label "Partitions";
	    bgo:hasPartitionList (
	        resource:p1
	        resource:p2
	    )
