    bgo:hasTrendColorScheme resource:trend_color_scheme ;
    bgo:hasTotalizer resource:filtered_total_formatter ;
    bgo:hasTagCloud resource:tag_cloud ;
    bgo:hasSearchPane resource:search_pane ;
    bgo:hasTooltip [
        bgo:amountFormatter resource:amount_formatter;
        bgo:referenceFormatter resource:amount_formatter;
        bgo:trendFormatter resource:trend_formatter
    ] ;
.

