#######################################################
# Partitions
#######################################################

##### P1
resource:p1 a bgo:Partition ;
	bgo:partitionId "p1" ; 
	bgo:label "partition1" ; 
	bgo:title "Partition 1 title" ;
	bgo:sortOrder bgo:ascendent_sort ; # or bgo:descendent_sort (default)
	bgo:sortCriteria bgo:natural_sort ; # or bgo:abs_sort (default)
	bgo:groupFunction bgo:trend_average ; # or bgo:amounts_sum(default), bgo:accounts_count
	## note only not filtered
    bgo:hasAccountSubSet 
        resource:p1_1 ,
        resource:p1_2
    ;
    bgo:hasDefaultAccountSubSet [ a bgo:DefaultAccountSet  ;
	    bgo:label "default" ;
	    bgo:title "Default subset for p1" 
    ]
.


resource:p1_1 a bgo:AccountSet ;
    bgo:label "subset 1" ;
    bgo:title "Subset 1 title" ;
    bgo:description "An acoount subset" ;
    bgo:abstract "This use **markdown**"^^bgo:MDString ;
    bgo:hasAccount
        resource:account_1 ,
        resource:account_2 
.

resource:p1_2 a bgo:AccountSet ;
    bgo:label "subset 2" ;
    bgo:title "Subset 2 title" ;
    bgo:hasAccount
        resource:account_3 ,
        resource:account_4 
.


#### P2 ###########
resource:p2 a bgo:Partition;
	bgo:partitionId "2" ;
	bgo:title "P2 title" ;
	bgo:label "partition2" ;
    bgo:hasAccountSubSet 
	    [
		    bgo:title "Title for p2_1" ;
		    bgo:hasAccount
		        resource:account_1 ,
		        resource:account_4 , 
		        resource:account_6 ,
		        resource:account_8   # N: this not exists, so it will be ignored	          	    
	    ]
    ;
    
    # Note no default partition is present : a default one should be create with title "Unassigned"
.





