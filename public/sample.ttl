@prefix bgo: <http://linkeddata.center/lodmap-bgo/v1#> .
@prefix resource: <http://mef.linkeddata.cloud/resource/> .

resource:app a bgo:KnowledgeGraph ;
    bgo:title "legge di Bilancio 2019"@it ;
    bgo:description "Dati di spesa relativi alla Legge di Bilancio approvata per l'esercizio finanziario 2019" ;
    bgo:richDescription "This use <b>html</b> and should be scrollable"@it ; 
    
    bgo:hasAccount
        resource:account_1 ,
        resource:account_2 ,
        resource:account_3 ,
        resource:account_4 , 
        resource:account_5 , 
        resource:account_6 
    ;
 
    bgo:hasPartitions (
        resource:ministeri 
        resource:missioni
    ) ;

    bgo:hasBigPicture resource:budget ; 
    bgo:hasPartitionView resource:partition_view ; 
    bgo:hasTableView resource:table_view 
.


##### BigPicture view #######
resource:budget a bgo:BigPicture ; 
	bgo:title "Vista d'insieme"@it;
	
    bgo:hasTotalizer resource:totalizer ;
    bgo:hasTagCloud resource:tag_cloud ;
    bgo:hasTrendColorScheme resource:trend_color_scheme ;
    bgo:hasSearchWidget resource:search_widget ;
    bgo:hasScalingParameters resource:scaling_parameter 
.


##### Partitions  view ################
resource:partition_view a bgo:PartitionView ;
	bgo:title "Partizioni"@it;
	bgo:mainPartitionLabel "stato"@it;
.

##### Table view ################
resource:table_view a bgo:TableView ;
	bgo:title "Vista tabellare"@it;
	
    bgo:hasSearchWidget resource:search_widget ;
    bgo:headerColumn1Label "Nome azione"@it ;
    bgo:headerColumn2Label "Spesa"@it ;
    bgo:headerColumn3Label "Var. dal bilancio precedente"@it ;
    bgo:headerColumn4Label "Descrizione"@it ;
.


##### Totalizer #######
resource:totalizer a bgo:Totalizer ;
    bgo:totalPrintfTemplate "Totale: € %s"@it ;
    bgo:totalFilteredPrintfTemplate "Spese evidenziate: € %s (%s%% del tot.)"@it 
.


### Search and tag clouds #######
resource:search_widget a bgo:SearchWidget ;
    bgo:label "Cerca"@it 
.


resource:tag_cloud a bgo:TagCloud ;
	bgo:hasTag
		[ bgo:label "Test1"; bgo:tagSize 1.0 ] ,
		[ bgo:label "Test2"; bgo:tagSize 0.5 ] ,
		[ bgo:label "Test3"; bgo:tagSize 1.0 ] ,
		[ bgo:label "Test4"; bgo:tagSize 0.2 ] ,
		[ bgo:label "Test5"; bgo:tagSize 0.7 ] ,
		[ bgo:label "Test6"; bgo:tagSize 0.3 ] 
.

##### Color Scheme #######
resource:trend_color_scheme a bgo:TrendColorScheme ;
    bgo:title "Variazione rispetto alla precedente legge di bilancio"@it;
    bgo:hasNATrend resource:trend_color_na;
    bgo:hasVeryDecreasingTrend resource:trend_color_very_dec;
    bgo:hasDecreasingTrend resource:trend_color_dec ;
    bgo:hasStableTrend resource:trend_color_stable ;
    bgo:hasIncreasingTrend resource:trend_color_inc ;
    bgo:hasVeryIncreasingTrend resource:trend_color_very_inc ;
.

resource:trend_color_na a bgo:TrendColor ;
	bgo:label "N.D." ;  
	bgo:rgbColor "x00000"
.
resource:trend_color_very_dec a bgo:TrendColor ;
	bgo:label "-25%" ;
	bgo:threshold -0.25 ;
	bgo:rgbColor "x00000"
.
resource:trend_color_dec a bgo:TrendColor ;
	bgo:label "-5%" ;
	bgo:threshold -0.05 ;
	bgo:rgbColor "x00000"
.
resource:trend_color_stable a bgo:TrendColor ;
	bgo:label "0%" ;
	bgo:threshold 0.00 ;
	bgo:rgbColor "x00000"
.
resource:trend_color_inc a bgo:TrendColor ;
	bgo:label "5%" ;
	bgo:threshold 0.05 ;
	bgo:rgbColor "x00000"
.
resource:trend_color_very_inc a bgo:TrendColor ;
	bgo:label "25%" ;
	bgo:threshold 0.25 ;
	bgo:rgbColor "x00000"
.



##### Scaling parameters #######
resource:scaling_parameters a bgo:ScalingParameters ;
	bgo:hasMinBubbleSize  4 ;  # in pixel
	bgo:hasMaxBubbleSize  50  # in percentuale rispetto al canvass
.


#########################################################
## Here resources just needed to display partitions 
#########################################################

#### MINISTERI ###########
resource:ministeri a bgo:Partition ;
	bgo:label "ministero"@it ; 
	bgo:paritionId "ministeri" ; 
    bgo:hasPart 
        resource:economia ,
        resource:istruzione ,
        resource:interno
.

resource:economia a bgo:AccountSet ;
    bgo:isPartOf resource:ministeri ;
    bgo:label "economia"@it ;
    bgo:title "Ministero Economia e Finanze" ;
    bgo:description "Capitoli di spesa relativi al Ministero dell' Economia e delle Finanze"@it ;
    bgo:richDescription "This use <b>html</b> and should be scrollable"@it ;
    bgo:hasAccount
        resource:account_1 ,
        resource:account_2 
.

resource:istruzione a bgo:AccountSet ;
    bgo:label "istruzione"@it ;
    bgo:title "Ministero dell'istruzione"@it ;
    bgo:hasAccount
        resource:account_3 ,
        resource:account_4 
.

resource:interno a bgo:AccountSet  ;
    bgo:label "istruzione"@it ;
    bgo:title "Ministero dell'istruzione"@it ;
    bgo:hasAccount
        resource:account_5 ,
        resource:account_6  
.


#### MISSIONI ###########
resource:missioni a bgo:Partition ;
	bgo:label "missione"@it ;
	bgo:paritionId "missioni" ;
    bgo:hasPart 
        resource:missione_1 
.

resource:missione_1 a bgo:AccountSet ;
    bgo:label "missione 1"@it ;
    bgo:title "Missione di esempio"@it ;
    bgo:richDescription "Contiene solo due account, gli altri sono in una partzione 'altro'"@it ;
    bgo:hasAccount
        resource:account_1 ,
        resource:account_2  
.



#############################################
# Accounts view general data
############################################# 
resource:historical_perspective a bgo:HistoricalPerspective ;
	bgo:title "Storico dell'azione"@it
.

resource:drildown_perspective a bgo:DrilldownPerspective ;
	bgo:title "Dettaglio capitoli di spesa"@it 
.



