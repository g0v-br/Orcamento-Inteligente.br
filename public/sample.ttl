# Accounts
############################################# 

## Account 1 with all the details
resource:account_1 a bgo:Account ;
	bgo:accountId "account_1" ;
    bgo:amount 1000.00 ;
    bgo:referenceAmount 950.00 ;
    bgo:title "Rimborso debito pubbblico"@it ;
    bgo:description "Rimborso titoli del debito statale"@it ;
    
    bgo:versionId "2019" ;
    bgo:richDescription "Il rimborso dei titolo del debito statale tiene conto del: <ul><li>pagamento delle quote capitale sui titoli del debito statale</li><li>rimborso del capitale relativo a buoni postali fruttiferi</li><li>rimborso alla Banca d'Italia del controvalore delle lire presentate al cambio per il ritiro dalla circolazione</li><li>rimborso passività a carico dello Stato</li></ul>"@it ;
	bgo:hasHistoryRec (
        resource:account_1_rec1 
        resource:account_1_rec2 
    ) ;
    bgo:hasPart
    	resource:account_1_part1 ,
    	resource:account_1_part2 ,
    	resource:account_1_part3 
    ;
    
    bgo:hasHistoricalPerspective resource:historical_perspective ;
    bgo:hasDrilldownPerspective resource:drildown_perspective ;
    
   	# Labels
   	bgo:notAvailableTrendAccountLabel "Non disponibile"@it 
.

