@prefix bgo: <http://linkeddata.center/lodmap-bgo/v1#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix resource: <http://example.com/resource/> .


<> foaf:primaryTopic resource:domain .

################################################
# Menu and nvigation data
################################################
resource:domain a bgo:Domain ;
    bgo:hasNavigationMenu resource:navigation_menu ;
    bgo:hasOptionMenu resource:option_menu ; 
    bgo:hasFooterMenu resource:footer_menu ;  
    bgo:hasCopyrigthMenu resource:copyright
.

resource:navigation_menu a bgo:NavigationMenu ;
	bgo:hasOverviewMenuIcon "fas fa-atom" ;
	bgo:hasOverviewMenuLabel "Vista d'insieme"@it ;
	
	bgo:hasTableMenuLabel "tabella"@it ;
	bgo:hasUserEntryList (
		[ 
			bgo:icon "fas fa-atom" ;
			bgo:title "Visit us" ;
			bgo:menuLink <http://linkeddata.center>
		]
	)
.

resource:option_menu a bgo:OptionMenu .

resource:footer_menu a bgo:FooterMenu ;
	bgo:hasUserEntryList (
		[ 
			bgo:title "Visit us" ;
			bgo:menuLink <http://linkeddata.center>
		]
	)
.

resource:copyright a bgo:CopyrightMenu ;
	bgo:hasUserEntryList (
		[ 
			bgo:title "(c) LinkedData.Center" ;
			bgo:menuLink <http://linkeddata.center>
		]
	)
.
#######################################################
# Views
#######################################################
resource:overview a bgo:Overview, bgo:DefaultAccountSet ;
	bgo:label "stato"@it ; 
	bgo:menuLabel "Vista d'insieme"@it ;
	bgo:title "legge di Bilancio 2019"@it ;
    bgo:description "Dati di spesa relativi alla Legge di Bilancio approvata per l'esercizio finanziario 2019" ;
    bgo:abstract "This use <b>html</b> and should be scrollable"@it ; 
    bgo:hasPartitionList (
        resource:ministeri
        resource:missioni
    ) ;
    bgo:hasPartitionButtonsPane resource:partition_buttons ;
	bgo:hasTrendColorScheme resource:trend_color_scheme ;
    bgo:hasTotalizer resource:totalizer ;
    bgo:hasTagCloud resource:tag_cloud ;
    bgo:hasSearchPane resource:search_pane ;
.

resource:table_view a bgo:TableView ;
	bgo:label "tabella"@it ;
	bgo:menuLabel "Vista tabellare"@it;
	bgo:title "Azioni legge di Bilancio 2019"@it ;
	
    bgo:hasSearchPane resource:search_pane ;
     
    bgo:headerTitle "Nome azione"@it ;
    bgo:headerAmount "Spesa"@it ;
    bgo:headerTrend "Tendenza"@it ;
    bgo:headerDescription "Descrizione"@it ;
.

#######################################################
# Partitions
#######################################################

##### Ministeri
resource:ministeri a bgo:Partition ;
	bgo:partitionId "ministeri" ; 
	bgo:menuLabel "Ministeri"@it ;
	bgo:partitionLabel "ministero"@it ; 
    bgo:hasAccountSubSet 
        resource:economia ,
        resource:istruzione
    ;
    bgo:hasDefaultAccountSubSet resource:interno
.

resource:economia a bgo:AccountSet ;
    bgo:label "economia"@it ;
    bgo:title "Ministero Economia e Finanze" ;
    bgo:description "Capitoli di spesa relativi al Ministero dell' Economia e delle Finanze"@it ;
    bgo:abstract "This use <b>html</b> and should be scrollable"@it ;
    bgo:hasAccount
        resource:account_1 ,
        resource:account_2 
.

resource:istruzione a bgo:AccountSet ;
    bgo:label "istruzione"@it ;
    bgo:title "Ministero dell'istruzione"@it ;
    bgo:hasAccount
        resource:account_3 ,
        resource:account_4 
.

resource:interno a bgo:DefaultAccountSet  ;
    bgo:label "istruzione"@it ;
    bgo:title "Ministero dell'istruzione"@it 
.


#### MISSIONI ###########
resource:missioni a bgo:Partition;
	bgo:partitionId "missioni" ;
	bgo:menuLabel "Missioni"@it ;
	bgo:partitionLabel "missione"@it ;
    bgo:hasAccountSubSet 
        resource:missione_1 
    ;
    bgo:hasDefaultAccountSubSet resource:altre_missioni
.

resource:missione_1 a bgo:AccountSet ;
    bgo:title "Missione di esempio"@it ;
    bgo:hasAccount
        resource:account_1 ,
        resource:account_2  
.

resource:altre_missioni a bgo:DefaultAccountSet ;
    bgo:title "Altre missioni"@it 
.




#######################################################
# Views options
#######################################################

###### Trend Color Scheme #######
resource:trend_color_scheme a bgo:TrendColorScheme ;
    bgo:title "Variazione rispetto alla precedente legge di bilancio"@it ;
    bgo:noTrendColor "0xeeeeee" ;
    bgo:maxTrendColor "green" ;
    bgo:minTrendColor "red" ;
.


##### Totalizer #######
resource:totalizer a bgo:Totalizer ;
    bgo:totalPrintfTemplate "Totale: € %s"@it ;
    bgo:totalFilteredPrintfTemplate "Spese evidenziate: € %s (%s%% del tot.)"@it 
.


### Search and tag clouds #######
resource:search_pane a bgo:SearchWidget ;
    bgo:label "Cerca"@it 
.


resource:tag_cloud a bgo:TagCloud ;
	bgo:hasTag
		[ bgo:label "Test1"; bgo:tagWeight 1.0 ] ,
		[ bgo:label "Test2"; bgo:tagWeight 0.5 ] ,
		[ bgo:label "Test3"; bgo:tagWeight 1.0 ] ,
		[ bgo:label "Test4"; bgo:tagWeight 0.2 ] ,
		[ bgo:label "Test5"; bgo:tagWeight 0.7 ] ,
		[ bgo:label "Test6"; bgo:tagWeight 0.3 ] 
.

#############################################
# Accounts perspectives
############################################# 
resource:metadata_perspective a bgo:MetadataPerspective ;
   	bgo:notAvailableTrendAccountLabel "Non disponibile"@it 
.

resource:historical_perspective a bgo:HistoricalPerspective ;
	bgo:title "Storico dell'azione"@it
.

resource:Breakdown_perspective a bgo:BreakdownPerspective ;
	bgo:title "Dettaglio capitoli di spesa"@it 
.


#############################################
# Accounts
############################################# 

## Account 1 with all the details
resource:account_1 a bgo:Account ;
    bgo:title "Rimborso debito pubbblico"@it ;
    bgo:description "Rimborso titoli del debito statale"@it ;
    bgo:abstract "Il rimborso dei titolo del debito statale tiene conto del: <ul><li>pagamento delle quote capitale sui titoli del debito statale</li><li>rimborso del capitale relativo a buoni postali fruttiferi</li><li>rimborso alla Banca d'Italia del controvalore delle lire presentate al cambio per il ritiro dalla circolazione</li><li>rimborso passività a carico dello Stato</li></ul>"@it ;
    
	bgo:accountId "account_1" ;
    bgo:amount 1000.00 ;
    bgo:referenceAmount 950.00 ;
    
    bgo:versionId "2019" ;
	bgo:hasHistoryRec (
        resource:account_1_rec1 
        resource:account_1_rec2 
    ) ;
    bgo:hasBreakdown
    	resource:account_1_part1 ,
    	resource:account_1_part2 ,
    	resource:account_1_part3 
    ;
    
    bgo:usesHistoricalPerspective resource:historical_perspective ;
    bgo:usesBreakdownPerspective resource:breakdown_perspective ;
    bgo:usesMetadataPerspective resource:metadata_perspective ;
    
.

